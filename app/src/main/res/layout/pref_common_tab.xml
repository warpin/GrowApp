<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"


    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

      <RelativeLayout
          android:id="@+id/pref_relative"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:text="@string/pref_crit_notif"
              android:id="@+id/textView21"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" />
          <View style="@style/Divider"
              android:id="@+id/view4"
              android:layout_below="@id/textView21"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" />

          <GridLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/textView21"
              android:id="@+id/pref_gl"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"
              android:layout_marginTop="23dp">
          </GridLayout>
          <View style="@style/Divider"
              android:id="@+id/view5"
              android:layout_below="@id/pref_gl"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:text="@string/notif_pref"
              android:layout_below="@+id/view5"
              android:id="@+id/pref_tv_notif_label"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" />
          <View style="@style/Divider"
              android:id="@+id/view7"
              android:layout_below="@id/pref_tv_notif_label"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" />


          <CheckBox
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Отключить все уведомления?"
              android:layout_marginTop="5dp"
              android:id="@+id/cb_notify_all"
              android:checked="false"
              android:layout_below="@+id/pref_tv_notif_label"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:text="@string/notif_period"
              android:id="@+id/textView19"
              android:layout_below="@+id/cb_notify_all"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"
              android:layout_alignParentRight="true"
              android:layout_alignParentEnd="true" />
          <Spinner
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/pref_period_spinner"
              android:layout_below="@+id/textView19"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" />

          <View style="@style/Divider"
              android:id="@+id/view6"
              android:layout_below="@+id/pref_period_spinner"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" />



          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:text="@string/notif_sound_label"
              android:id="@+id/textView22"
              android:layout_alignTop="@+id/view6"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" />


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:id="@+id/pref_tv_setnotifsound"
              android:onClick="SetNotifSound"
              android:text="123"
              android:layout_alignParentStart="true"
              android:clickable="true"
              android:layout_below="@+id/textView22"
              android:layout_alignParentLeft="true" />
          <View style="@style/Divider"
              android:id="@+id/view2"
              android:layout_alignParentStart="true"
              android:layout_below="@+id/pref_tv_setnotifsound"
              android:layout_alignParentLeft="true" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:text="@string/notif_vibrate_label"
              android:id="@+id/textView23"
              android:layout_alignTop="@+id/view2"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:id="@+id/pref_tv_setnotifvibrate"
              android:onClick="SetNotifVibrate"
              android:clickable="true"
              android:text="123"
              android:layout_alignParentStart="true"
              android:layout_below="@+id/textView23"
              android:layout_alignParentLeft="true" />
          <View style="@style/Divider"
              android:id="@+id/view"
              android:layout_below="@+id/pref_tv_setnotifvibrate"
               />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:text="@string/notif_color_label"
              android:id="@+id/textView24"
              android:layout_alignTop="@+id/view"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:id="@+id/pref_tv_setnotifcolor"
              android:onClick="SetNotifColor"
              android:clickable="true"
              android:text="123"

              android:layout_below="@+id/textView24"
               />

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/relativeLayout"
              android:layout_alignTop="@+id/textView24"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true">

          </RelativeLayout>


      </RelativeLayout>
</ScrollView>